    <section style="background-color: lightgray;" >
        <div id="register" class="form">

            <form  action="/register/update/<%=user.id%>?_method=PUT" autocomplete="on" method="POST" > 
              <!-- enctype="multipart/form-data" -->
              <h1 class="titlePage"> Editá tu perfil</h1> 

              <img style="border-radius: 50%;margin-bottom: 20px;" src="/uploads/avatar_user/<%= user.avatar %>" alt="<%= user.name %>">

