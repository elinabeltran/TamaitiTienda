                <label for="usernamesignup" class="uname" >Tu nombre</label>
                  <input class="form-control" id="usernamesignup" name="name" required="required" type="text" placeholder="Nombre" value="<%= user.name %>"  />
              </div>
              <div class="form-group">
                <label for="usernamesignup" class="" >Apellido</label>
                  <input class="form-control" id="usernamesignup" name="lastName" required="required" type="text" placeholder="Apellido" value="<%= user.last_name %>" />
              </div>

              <div class="form-group">
                <label for="emailsignup" class="" > Tu email</label>
                  <input class="form-control" id="emailsignup" name="email" required="required" type="email" placeholder="ejemplo@mail.com" value="<%= user.email %>" /> 
              </div>

