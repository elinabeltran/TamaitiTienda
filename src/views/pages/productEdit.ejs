<%- include('../partials/head'); %>

  <body>

    <header>
      <%- include('../partials/header'); %>
    </header>

    <section style="background-color: lightgray;">
      <div id="createProduct" class="form">
        <form action="<%=elProducto.id%>?_method=PUT" autocomplete="on" method="POST" enctype="multipart/form-data">
          <h1 class="titlePage">Editar Producto</h1>
          <div class="form-group">
            <label for="" class="">Nombre del producto </label>
            <input id="name" name="name" class="form-control" required="required" type="text"
              value="<%=elProducto.name%>" />
          </div>

          <div class="form-group">
            <label for="" class=""> Descripción</label>
            <input id="description" name="description" class="form-control" required="required" type="text"
              value="<%=elProducto.description%>" />
          </div>

          <!-- <div class="form-group">
                <label for="" class="" >Cambiar la imagen </label>
                <input id="image" name="image" class="form-control" required="required" type="file" />
            </div>   -->

          <div class="form-group">
            <label for="" class="">Precio </label>
            <input id="price" name="price" class="form-control" required="required" type="number"
              value="<%=elProducto.price%>" />
          </div>

          <div class="form-group">
            <label for="" class="">Edad sugerida</label>
            <select id="age" name="age" class="form-control" required="required" placeholder="Edad sugerida"
              value="<% elProducto.age%>">
              <option value="1 a 3 años">1 a 3 años</option>
              <option value="3 a 6 años">3 a 6 años</option>
              <option value="6 a 9 años">6 a 9 años</option>
              <option value="+9 años">+9 años</option>
            </select>
          </div>


          <div class="form-group">
            <label for="" class=""> Categoria</label>
            <select id="category" name="category" class="form-control" required="required"
              placeholder="Selecciona una categoria" value="<%= elProducto.id_category%>">
              <% for (let i=0; i < categorias.length; i++) {%>
                <option value="<%= categorias[i].id %>">
                  <%= categorias[i].name %>
                </option>
                <% }%>
            </select>
          </div>


          <p>
            <button type="submit" class="btn btn-primary">Confirmar cambios</button>
            </br>
            </br>
            
          <p class="change_link"> Ya eres miembro? </p>
          </br>
          <a href="login" class="to_register"> Loguéate </a>
          </p>
        </form>
      </div>
    </section>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>

    <%- include('../partials/closure'); %>