<%- include('../partials/head'); %>
<body>

    <header>
        <%- include('../partials/header'); %>
    </header>






    
    <section style="background-color: lightgray;" >
        <div id="register" class="form">
            <form  action="" autocomplete="on" method="POST" enctype="multipart/form-data"> 
              <h1 class="titlePage"> Registro</h1> 

              <div class="form-group">
                <label for="usernamesignup" class="uname" >Tu nombre</label>
                  <input class="form-control" id="usernamesignup" name="name" required="required" type="text" placeholder="Nombre" />
              </div>
              <div class="form-group">
                <label for="usernamesignup" class="" >Apellido</label>
                  <input class="form-control" id="usernamesignup" name="lastName" required="required" type="text" placeholder="Apellido" />
              </div>

              <div class="form-group">
                <label for="emailsignup" class="" > Tu email</label>
                  <input class="form-control" id="emailsignup" name="email" required="required" type="email" placeholder="ejemplo@mail.com"/> 
              </div>

              <div class="form-group">
                <label for="" class="" >Carga tu imagen de perfil</label>
                <input id="image" name="image" class="form-control" required="required" type="file" placeholder="Imagen de perfil" />
            </div>  

              <div class="form-group">
                <label for="passwordsignup" class="" >Tu password </label>
                  <input  class="form-control" id="passwordsignup" name="password" required="required" type="password" placeholder="eg. X8df!90EO"  title="Debe contener al menos un número y una letra minúscula y mayúscula, y al menos 8 o más caracteres"/> 
                </div>

                <div class="form-group">
                    <label for="passwordsignup_confirm" class="youpasswd" >Confirma tu password </label>
                  <input class="form-control" id="passwordsignup_confirm" name="password_confirm" required="required" type="password" placeholder="eg. X8df!90EO"/>
                </div>

                <div class="form-group">
                    <input type="submit" value="Registro" class="btn"/> 
                </div>

                <p class="change_link">  
                  Ya eres miembro?
                  <a href="login" > Loguéate </a>
              </p>
            </form>
        </div>
    </section>
    
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

<%- include('../partials/closure'); %>