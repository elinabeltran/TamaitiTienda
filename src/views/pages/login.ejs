<%- include('../partials/head'); %>

  <body>


    <div class="conteiner bkGray" >


      <header>
        <%- include('../partials/header'); %>
      </header>


      <main>
        <section >
          <div id="login" class="form">
            <h1 class="titlePage">Iniciar sesión</h1>

            <% if(typeof msgBienvenida !="undefined" ){%>
              <h5>
                <%=msgBienvenida.msg %>
              </h5>
              <br>

              <%}%>


                <% if(typeof errors !="undefined" ){%>
                  <div class="errors-group">
                    <ul class="errorsUl">

                      <% for(let i=0 ; i < errors.length; i++){%>
                        <li>
                          <%=errors[i].msg %>
                        </li>
                        <%}%>
                    </ul>
                  </div>
                  <%}%>

                    <form action="" autocomplete="on" method="POST">

                      <div class="form-group">
                        <label for="username" class="uname" autocomplete="on">E-mail: </label>
                        <input id="useremail" name="email" autocomplete="on" type="text" placeholder="Tu e-mail"
                          class="form-control" />
                      </div>


                      <!-- required="required"  -->
                      <div class="form-group">
                        <label for="password" class="youpasswd"> Contraseña:</label>
                        <input id="password" name="password" type="password" placeholder="Tu password"
                          title="Debe contener al menos un número y una letra minúscula y mayúscula, y al menos 8 o más caracteres"
                          class="form-control" />
                      </div>

                      <div class="form-group">
                        <label for="password" class="youpasswd"> Recordame:</label>
                        <input id="recordame" name="recordame" type="checkbox" />
                      </div>


                      <div class="login button">
                        <button type="submit" value="Login" class="btn btn-primary">Ingresar</button>
                      </div>
                      <br>

                      <p class="">
                        Aún no eres miembro
                        <a href="/register" class="to_register btn btn_secundary">Regístrate</a>
                        <br>
                      </p>
                    </form>
                    <br>
                    <br>


          </div>
        </section>
      </main>


    </div>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>

    <%- include('../partials/closure'); %>